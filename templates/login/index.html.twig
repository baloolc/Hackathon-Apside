{% extends 'layout.html.twig' %}

{% block body %}
	<h1 class="d-flex justify-content-center mt-5 mb-4">Se connecter</h1>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form action="" method="post">
		<div class="row">
			<div class="container shadow bg-light rounded d-flex flex-column align-items-center col-lg-5 col-10 mb-4">
				<div class="d-flex flex-column justify-content-center align-items-center col-lg-10 mt-5">
					<label class="w-100 fs-5 mb-2" for="username">E-mail</label>
					<input class=" p-2 fs-5 form-control border-dark" type="text" id="username" name="_username" value="{{ last_username }}" required placeholder="votre.email@paleolife.com"/>
				</div>
				<div class="d-flex flex-column justify-content-center align-items-center col-lg-10 mt-4">
					<label class="w-100 fs-5 mb-2" for="password">Mot de passe</label>
					<input class=" p-2 fs-5 form-control border-dark" type="password" id="password" name="_password" required placeholder="Mot de passe"/>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-flex justify-content-center my-5">
					<button class="btn btn-dark text-light fs-5" type="submit">
						<i class="bi bi-box-arrow-in-left me-2"></i>Se connecter</button>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
