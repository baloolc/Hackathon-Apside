{% extends 'layout.html.twig' %}

{% block title %}Les projets {{ enterprise.name }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('enterprise') }}
{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
	<h1 class="d-flex justify-content-center my-5 w-50 text-light title-enterprise p-3">Projets de {{ enterprise.name }}</h1>
    </div>
	<div class="row d-flex justify-content-around mb-5">
		{% for project in enterprise.projects %}
			<div class="card col-3 m-5 bg-primary p-3 rounded d-flex flex-column justify-content-evenly">
				<h2 class="d-flex justify-content-center my-3 title-card">{{ project.name }}</h2>
                <h3 class="d-flex justify-content-center society my-3">{{ project.society }}</h3>
                <div>
                <h4 class="">Description</h4>
                <p class="mb-3 fs-5">{{ project.description }}</p>
                </div>
            </div>
		{% endfor %}
	</div>
{% endblock %}
